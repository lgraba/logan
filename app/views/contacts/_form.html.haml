-# Form for contact

= form_for @contact do |f|

	= f.label :name, "Name"
	%br
	= f.text_field :name, required: true

	%br
	%br
	= f.label :email, "Email"
	%br
	= f.email_field :email, required: true

	%br
	%br
	= f.label :message, "What's Up?"
	%br
	= f.text_area :message, as: :text

	.hidden
		= f.label :nickname
		= f.text_field :nickname, hint: 'CAPTCHA: Leave Blank'

	%br
	%br
	= f.submit 'Say Hi', class: "button"