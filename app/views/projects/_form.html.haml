-# Form for new project

= form_for @project do |f|
	- if @project.errors.any?
		%h2
			= pluralize(@project.errors.count, "error")
			prevented this project from saving:
		%ul
			- @project.errors.full_messages.eac do |msg|
				%li= msg

	= f.label :title, "Title"
	%br
	= f.text_field :title

	%br
	%br
	= f.label :description, "Description"
	%br
	= f.text_area :description

	%br
	%br
	= f.label :tag_list, "Tags"
	%br
	= f.text_area :tag_list

	%br
	%br
	= f.label :link, "Link"
	%br
	= f.text_field :link

	%br
	%br
	= f.label :content, "Write about your project here, Logan!"
	%br
	= f.text_area :content

	%br
	%br
	= f.submit
